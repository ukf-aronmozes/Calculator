<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center|fill_horizontal|fill_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvPanel"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@color/dark_gray"
        android:padding="10dp"
        android:textSize="50sp"
        android:gravity="bottom|end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="clip_horizontal|center|fill_horizontal"
            android:orientation="horizontal"
            android:scaleX=".9"
            android:showDividers="middle">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_gray"
                android:fontFamily="@font/text"
                android:text="AC"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:onClick="onClear"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonPAM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_gray"
                android:fontFamily="@font/text"
                android:text="+/-"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:onClick="onDigit"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_gray"
                android:fontFamily="@font/text"
                android:text="%"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:onClick="onDigit"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_yellow"
                android:fontFamily="@font/text"
                android:text="/"
                android:textAllCaps="true"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:onClick="onOperator"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="clip_horizontal|center|fill_horizontal"
            android:orientation="horizontal"
            android:scaleX=".9"
            android:showDividers="middle">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_dark_gray"
                android:fontFamily="@font/text"
                android:text="7"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:onClick="onDigit"
                android:textStyle="normal|bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_dark_gray"
                android:fontFamily="@font/text"
                android:text="8"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:onClick="onDigit"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_dark_gray"
                android:fontFamily="@font/text"
                android:text="9"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold"
                android:onClick="onDigit"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonMult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_yellow"
                android:fontFamily="@font/text"
                android:onClick="onOperator"
                android:text="X"
                android:textAllCaps="true"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="clip_horizontal|center|fill_horizontal"
            android:orientation="horizontal"
            android:scaleX=".9"
            android:showDividers="middle">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_dark_gray"
                android:fontFamily="@font/text"
                android:onClick="onDigit"
                android:text="4"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_dark_gray"
                android:fontFamily="@font/text"
                android:onClick="onDigit"
                android:text="5"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_dark_gray"
                android:fontFamily="@font/text"
                android:onClick="onDigit"
                android:text="6"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_yellow"
                android:fontFamily="@font/text"
                android:onClick="onOperator"
                android:text="-"
                android:textAllCaps="true"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="clip_horizontal|center|fill_horizontal"
            android:onClick="onDigit"
            android:orientation="horizontal"
            android:scaleX=".9">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_dark_gray"
                android:fontFamily="@font/text"
                android:onClick="onDigit"
                android:text="1"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_dark_gray"
                android:fontFamily="@font/text"
                android:onClick="onDigit"
                android:text="2"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_dark_gray"
                android:fontFamily="@font/text"
                android:onClick="onDigit"
                android:text="3"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_yellow"
                android:fontFamily="@font/text"
                android:onClick="onOperator"
                android:text="+"
                android:textAllCaps="true"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal"
            android:layout_weight="1"
            android:gravity="clip_horizontal|center|fill_horizontal"
            android:orientation="horizontal"
            android:scaleX="0.9">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="@integer/material_motion_duration_long_2"
                android:background="@drawable/double_button"
                android:fontFamily="@font/text"
                android:onClick="onDigit"
                android:text="0"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_dark_gray"
                android:fontFamily="@font/text"
                android:onClick="onDecimalPoint"
                android:text="@string/dot"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonEq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_yellow"
                android:fontFamily="@font/text"
                android:gravity="center"
                android:onClick="onOperator"
                android:text="="
                android:textAllCaps="true"
                android:textColor="@color/string"
                android:textScaleX="2"
                android:textSize="20dp"
                android:textStyle="normal|bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>